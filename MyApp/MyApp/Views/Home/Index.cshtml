@{
    ViewData["Title"] = "Home Page";
}

<div class="space-y-10">
    <header class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">Dashboard</h1>
        <p class="mt-3 text-lg text-gray-600">Selecciona un apartado para explorar las distintas áreas del sistema.</p>
    </header>

    <section aria-labelledby="dashboard-sections" class="space-y-6">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
            <div>
                <h2 id="dashboard-sections" class="text-2xl font-semibold text-gray-900">Apartados principales</h2>
                <p class="mt-1 text-sm text-gray-600">Accede rápidamente a los módulos clave del inventario.</p>
            </div>
        </div>

        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <article class="group rounded-xl border border-gray-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">Inventario</h3>
                        <p class="mt-1 text-sm text-gray-500">Gestiona el inventario general y controla existencias.</p>
                    </div>
                    <span class="rounded-full bg-indigo-100 px-3 py-1 text-xs font-medium text-indigo-600">General</span>
                </div>
            </article>

            <article class="group rounded-xl border border-gray-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">Proveedores</h3>
                        <p class="mt-1 text-sm text-gray-500">Consulta la información de proveedores y contratos vigentes.</p>
                    </div>
                    <span class="rounded-full bg-emerald-100 px-3 py-1 text-xs font-medium text-emerald-600">Socios</span>
                </div>
            </article>

            <a asp-area="" asp-controller="Home" asp-action="PollosQunin" class="group rounded-xl border border-indigo-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:border-indigo-300 hover:shadow-md focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">Comidas</h3>
                        <p class="mt-1 text-sm text-gray-500">Ir directamente al catálogo de Pollos Qunin.</p>
                    </div>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="size-6 text-indigo-500 transition group-hover:translate-x-1">
                        <path d="m9 18 6-6-6-6" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </div>
                <p class="mt-4 inline-flex items-center gap-2 text-sm font-medium text-indigo-600">Pollos Qunin
                    <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="size-4">
                        <path fill-rule="evenodd" d="M5.22 5.22a.75.75 0 0 1 1.06 0L10 8.94l3.72-3.72a.75.75 0 1 1 1.06 1.06L11.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06L10 11.06l-3.72 3.72a.75.75 0 0 1-1.06-1.06L8.94 10 5.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                    </svg>
                </p>
            </a>
        </div>
    </section>
</div>
